@using MvcStok.Models.Entity
@model List<TBLMUSTERILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="ahmet" style="background-color: white; margin-top:220px; height:380px; width:1160px">
    <table class="table table-bordered" style="margin-top:20px; margin-left:20px; margin-right:10px; width:1120px;">
        <tr>
            <th>MÜŞTERİ ID</th>
            <th>MÜŞTERİ AD</th>
            <th>MÜŞTERİ SOYAD</th>
            @*<th>SİL</th>*@
            <th>GÜNCELLE</th>
            <th>SİL</th>
        </tr>
        <tbody>
            @foreach (var mus in Model)
            {
                <tr>
                    <th>@mus.MUSTERIID</th>
                    <td>@mus.MUSTERIAD</td>
                    <td>@mus.MUSTERISOYAD</td>
                    @*<td><a href="/MUSTERI/SIL/@mus.MUSTERIID" class="btn btn-danger">SİL</a></td>*@
                    <td>
                        <a href="/MUSTERI/MusteriGetir/@mus.MUSTERIID" class="btn btn-success">
                            GÜNCELLE
                            <style>
                                .btn-success {
                                    background-color: green;
                                    color: white;
                                    font-weight: bold;
                                    border-radius: 75px;
                                    border-color: green;
                                }

                                    .btn-success:hover {
                                        background-color: white;
                                        color: green;
                                        border-color: white;
                                        transition: 0.3s;
                                    }
                            </style>
                        </a>
                    </td>
                    <td>
                        @Html.ActionLink("SİL", "SIL", new { id = mus.MUSTERIID }, new { @class = "btn btn-warning", onclick = "return confirm('Gerçekten silmek istiyor musun?')" })
                    <style>
                        .btn-warning {
                            background-color: orangered;
                            border-color: orangered;
                            color: white;
                            font-weight: bold;
                            border-radius: 75px;
                        }

                            .btn-warning:hover {
                                background-color: white;
                                border-color: white;
                                color: orangered;
                                transition: 0.3s;
                            }
                    </style>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <a href="/Musteri/YeniMusteri/" class="btn btn-primary">
        YENİ MÜŞTERİ EKLE
        <style>
            .btn-primary {
                margin-left:10px;
                border-radius: 75px;
                border-color: dodgerblue;
                background-color: dodgerblue;
                color: white;
                font-weight: bold;
            }

                .btn-primary:hover {
                    border-color: white;
                    color: dodgerblue;
                    background-color: white;
                    transition: 0.3s;
                }
        </style>
    </a>
</div>