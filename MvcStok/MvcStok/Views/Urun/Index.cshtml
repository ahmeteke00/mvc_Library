@using MvcStok.Models.Entity
@model List<TBLURUNLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div style="background-color:white;">
    <div style="margin-left:10px; margin-right:10px; margin-top:10px; padding-top:10px;">
        <table class="table table-bordered">
            <tr>
                <th>ÜRÜN ID</th>
                <th>ÜRÜN ADI</th>
                <th>MARKASI</th>
                <th>KATEGORİ</th>
                <th>FİYAT</th>
                <th>STOK</th>
                <th>SİL</th>
                <th>GÜNCELLE</th>
            </tr>
            <tbody>
                @foreach (var urn in Model)
                {
                    <tr>
                        <th>@urn.URUNID</th>
                        <td>@urn.URUNAD</td>
                        <td>@urn.MARKA</td>
                        <td>@urn.TBLKATEGORILER.KATEGORIAD</td>
                        <td>@urn.FIYAT</td>
                        <td>@urn.STOK</td>
                        <td>
                            <a href="/URUN/SIL/@urn.URUNID" class="btn btn-danger">
                                SİL
                                <style>
                                    .btn-danger {
                                        color: white;
                                        background-color: orangered;
                                        font-weight: bold;
                                        border-radius: 75px;
                                        border-color: orangered;
                                    }

                                        .btn-danger:hover {
                                            transition: 0.3s;
                                            background-color: white;
                                            border-color: white;
                                            color: orangered;
                                        }
                                </style>
                            </a>
                        </td>
                        <td>
                            <a href="/URUN/UrunGetir/@urn.URUNID" class="btn btn-success">
                                GÜNCELLE
                                <style>
                                    .btn-success {
                                        background-color: green;
                                        color: white;
                                        font-weight: bold;
                                        border-radius: 75px;
                                        border-color: green;
                                    }

                                        .btn-success:hover {
                                            background-color: white;
                                            color: green;
                                            border-color: white;
                                            transition: 0.3s;
                                        }
                                </style>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="/URUN/UrunEkle/" class="btn btn-primary">
            YENİ ÜRÜN EKLE
            <style>
                .btn-primary {
                    margin-bottom:10px;
                    background-color: dodgerblue;
                    border-color: dodgerblue;
                    color: white;
                    border-radius: 75px;
                    font-weight: bold;
                }

                    .btn-primary:hover {
                        background-color: white;
                        border-color: white;
                        color: dodgerblue;
                        transition: 0.3s;
                    }
            </style>
        </a>
    </div>
</div>

